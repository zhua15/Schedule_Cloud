<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00FF0000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:text="Doctor Code:"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/codeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codeView"
        android:layout_width="231dp"
        android:layout_height="71dp"
        android:backgroundTint="@color/inputColour"
        android:inputType="number"
        android:maxLength="20"
        android:textColor="@color/inputColour"
        android:textColorHint="@color/inputColour"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <Button
        android:id="@+id/confirm"
        android:layout_width="168dp"
        android:layout_height="59dp"
        android:text="Confirm"
        android:onClick="onConfirm"
        android:textSize="25sp"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeView" />
</androidx.constraintlayout.widget.ConstraintLayout>